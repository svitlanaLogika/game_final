#:import from_hex kivy.utils.get_color_from_hex
#:import to_rgba kivy.utils.rgba
#:import colormap kivy.utils.colormap

#:set main_color '#ef852e'
#:set main_color_dark "#c96e24" 


<Widget>:
    font_name: 'assets/Lemon-Regular.ttf'


<ButtonMenu@Button>: 
    font_size: "56sp"
    bold: True 
    background_color: 0, 0, 0, 0
    size_hint: None, None
    pos_hint: {"center_x": 0.5}
    width: self.texture_size[0] + dp(40)   # ширина = текст + відступи

    canvas.before:
        Color:
            rgba: colormap['white']
        RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [self.font_size]
		Color:
			rgba: from_hex(main_color) if self.state == 'normal' else from_hex(main_color_dark)
		RoundedRectangle:
			size: self.size[0] - dp(6), self.size[1] - dp(6)
			pos: self.pos[0] + dp(3), self.pos[1] + dp(3)
			radius: [self.font_size]
 

<ButtonIcon@ButtonMenu>: 
    font_name: 'assets/typicons.ttf'

<Menu>:
    BoxLayout:
        orientation: "vertical" 
        padding: "30dp"
        spacing: "20dp"   

        canvas:
            Rectangle:
                source: 'assets/images/back_menu.png'
                size: dp(750), self.size[1]
                pos: self.center_x - dp(750) / 2, self.y

        Widget:
            size_hint_y: 0.05

        Label:
            text: "UNDERWATER\nCLICKER"
            font_size: "54sp"
            halign: "center"
            size_hint_y: 0.15

        Image:
            source: "assets/images/title.png"
            allow_stretch: True
            size_hint_y: 0.5
   
        ButtonMenu:
            text: " PLAY "
            size_hint_y: 0.15

            on_press: 
                root.manager.current = "game"
                root.manager.transition.direction = "left"

        BoxLayout:
            size_hint_y: 0.15

            # Button "Settings" 
            ButtonIcon: 
                text: "\uE04F" 
                on_press:
                    root.go_settings() 

            Widget:

            # Button "Exit" 
            ButtonIcon: 
                text: "\uE121" 
                on_press:
                    app.stop() 


<Settings>:
    BoxLayout:
        orientation: "vertical" 
        padding: "30dp"
        spacing: "20dp"  

        Label:
            text: "Settings"
            font_size: "40sp"
            
        ButtonMenu:
            text: "Back"
            size_hint_y: 0.2 
            on_press:
                root.go_menu()

<RotatedImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: 0, 0, 1
            origin: self.center
    canvas.after:
        PopMatrix


<Fish>:
    source: 'assets/images/fish_01.png'
    size_hint: None, None
    size: dp(200), dp(200)
    allow_stretch: True
    opacity: 0
    

<Game>:
    BoxLayout:
        orientation: "vertical" 
        padding: "30dp"
        spacing: "20dp"   

        canvas:
            Rectangle:
                source: 'assets/images/back_game.png'
                pos: self.pos
                size: self.size

        # Верхнє меню
        BoxLayout:
            size_hint_y: 0.12

            # Текстовий напис "Бали"
            Label:
                text: str(root.score)
                font_size: '56sp'
                size_hint_x: 0.8
                pos_hint: {'center_x': 1}

            # Кнопка-іконка "Дім"
            ButtonIcon: 
                text: '\uE08A' 
                on_press: root.go_home()

        # Ігрова область
        FloatLayout:
            size_hint_y: 0.76
            id: game_window

            Label:
                id: level_title
                text: 'Level 1'
                font_size: '60sp'
                size_hint_y: None
                height: self.texture_size[1]
                x: root.width / 2 - self.width / 2
                y: '130dp'

            Fish:
                id: fish
                center: root.center

            Label:
                id: level_complete
                text: '    Level\ncomplete!'
                color: from_hex('#12F3AF')#colormap['lawngreen']
                font_size: '50sp'
                size_hint_y: None
                height: self.texture_size[1]
                x: root.width / 2 - self.width / 2
                y: root.height / 2 - self.height / 2 + dp(100)
                opacity: 0

        # Нижнє меню
        BoxLayout:
            size_hint_y: 0.12
            
            # Кнопка-іконка "Налаштування"
            ButtonIcon: 
                text: '\uE04F' 
                pos_hint: {'y': 0}


        